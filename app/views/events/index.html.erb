<%- content_for( :javascript ) do %>
<%= javascript_include_tag "events" %>
<%- end -%>

<div class="container">

    <div class="row-fluid">

        <div id="event-filter" class="form-inline span12 well">

            <%= select_tag :visualization_format,
                            options_for_select( @formats, cookies['selected_format'] ),
                            { :class => "span2" } %>
            <%= select_tag :application_name, 
                            options_for_select( @applications, cookies['selected_application_id'] ), 
                            {:prompt => 'All Applications', :class => "span2"} %>
            <%= select_tag :module_name, 
                            options_for_select( @modules, cookies['selected_module_name'] ), 
                            {:prompt => 'All Modules', :class => "span2"} %>
            <%= select_tag :environment_name, 
                            options_for_select( @environments, cookies['selected_environment_name'] ),
                            {:prompt => 'All Environments', :class => "span2"} %>
            <%= select_tag :log_level,
                            options_for_select( @log_levels, cookies['selected_log_level'] ),
                            {:prompt => 'All Levels', :class => "span2" } %>


            <div class="input-append date dp_fix" id="dp1" data-date="" data-date-format="mm-dd-yyyy">
                <input id="date_from" class="span2" size="36" type="text" value="<%= cookies['selected_date_from'] %>" placeholder="Start Date" >
                <span class="add-on"><i class="icon-th"></i></span>
            </div>

            <%= button_tag "Apply", :class => "btn btn-primary", :id => "btn_apply" %>
            
            <%= button_tag "Reset", :class => "btn", :id => "btn_reset" %>

        </div>

    </div>

    <div class="row-fluid">

        <div id="log-console" class="span12" data-tail-url="<%= api_internal_events_tail_url %>" data-head-url="<%= api_internal_events_head_url %>">

            <div id="get-more-items">&nbsp;</div>

        </div>

    </div>

</div>

<div id="stacktrace-dialog" class="modal container hide fade" tabindex="-1">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3>Associated Stack Trace</h3>
    </div>
    <div class="modal-body">
        &nbsp;
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn">Close</button>
    </div>
</div>
