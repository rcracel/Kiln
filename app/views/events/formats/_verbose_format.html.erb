<div class='event <%= (event.log_level || "").downcase() %> <%= @selected_format %>' object-id="<%= event.id %>"> 

    <div class='event-date'>
        <%= event.timestamp.strftime("%Y-%m-%d %H:%M:%S %z") unless event.timestamp.nil? %>
    </div> 

    <div class='event-level'>
        Log Level:
        <% if not event.stack_trace.blank? %>
            <span data-trigger="stacktrace" data-url="<%= api_internal_event_stacktrace_path( event.id ) %>">
                <%= image_tag "bug.png" %>
            </span>
        <% end %>
        <%= event.log_level %>
    </div> 

    <div class='event-app-name'>Application Name: <%= event.application.try(:name) %></div> 

    <div class='event-module-name'>Module Name: <%= event.module_name %></div> 

    <div class='event-environment'>Environment: <%= event.environment_name %></div>

    <div class='event-source-ip'>Application IP Address: <%= event.ip_address %></div>

    <div class='event-source'>Event Source: <%= event.source %></div>

    <div class='event-message'><%= event.message %></div>

</div>