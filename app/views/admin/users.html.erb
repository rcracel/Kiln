<table class="table table-condensed table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Date Joined</th>

            <% has_role( :admin ) do %>
            <th>Actions</th>
            <% end %>

        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S %z") %></td>

                <% has_role( :admin ) do %>
                <td>&nbsp;</td>
                <% end %>

            </tr>
        <% end %>
    </tbody>
</table>

<% has_role( :admin ) do %>
    <%= render "admin/user_provisioning_form" %>
<% end %>
