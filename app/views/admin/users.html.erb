<div class="container">
    <div class="row">
        <div class="span12">
            <table class="table table-condensed table-hover table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>User Email</th>
                        <th>Date Joined</th>

                        <% has_role( :admin ) do %>
                        <th>Actions</th>
                        <% end %>

                    </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                        <tr>
                            <td><%= user.first_name %> <%= user.last_name %></td>
                            <td><%= user.email %></td>
                            <td><%= user.created_at.strftime("%Y-%m-%d %H:%M:%S %z") %></td>

                            <% has_role( :admin ) do %>
                            <td><%= link_to "Delete", delete_user_path( user ), :class => [ 'btn-danger', 'btn', 'btn-small' ] %></td>
                            <% end %>

                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
