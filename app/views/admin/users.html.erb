<table class="table table-condensed table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>User Email</th>
            <th>Date Joined</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.email %></td>
                <td><%= apply_timezone( user.created_at ).strftime("%Y-%m-%d %H:%M:%S %z") %></td>
                <td>&nbsp;</td>
            </tr>
        <% end %>
    </tbody>
</table>