<%- content_for( :javascript ) do -%>
<script type="text/javascript">
$(function() {
    $('#truncate_timestamp').datepicker({
        format: 'mm-dd-yyyy'
    });
});
</script>
<%- end -%>

<div class="page-header">
    <h1>Truncate Events <small>to free up disk space or improve database performance</small></h1>
</div>

<div class="row-fluid">

    <div class="span6 offset3 well">
        <legend style="text-align: center;">Choose a date to truncate events</legend>

        <%= form_tag do_truncate_events_all_apps_path, :method => :post do %>
          

            <div class="input-append date centered" id="truncate_timestamp">
                <input name="truncate_timestamp" class="span3" type="text" readonly />
                <span class="add-on"><i class="icon-th"></i></span>
            </div>

            <p style="text-align: center">
                <%= link_to "Cancel", admin_info_path, :class => [ :btn ] %>
                <%= submit_tag "Truncate", :class => [ 'btn', 'btn-danger'] %>
            </p>

        <% end %>

        <p style="text-align: center;" class="text-error">
            <strong>Warning:</strong>
            This will delete <em>all events</em> for <em>all applications</em> prior to the date specified. This action cannot be undone.
        </p>

        <p style="text-align: center;" class="text-warning">
            If you want to truncate events for a single application, please use the application management page instead.
        </p>


        <div style="text-align: center;">
        </div>

    </div>

</div>