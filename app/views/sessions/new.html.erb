<div class="container">
    <div class="row">
        <div class="span4 offset4 well">
            <legend>Please Sign In</legend>
            <%= form_tag authenticate_path, :class => "login-form" do %>
                <div class="clearfix">
                    <%= text_field_tag :email, params[:email], :placeholder => "Username" %>
                </div>
                <div class="clearfix">
                    <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
                </div>
                <%= submit_tag "Log In", :class => "btn btn-primary" %>
                <%= link_to "Forgot Password", forgot_password_path %>
            <% end %>
        </div>
    </div>
</div>
